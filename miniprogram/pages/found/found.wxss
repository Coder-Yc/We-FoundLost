.item{
  margin: 40rpx;
  font-size: 30rpx;
}
.item .label{
  font-weight: 1000;
  font-size: 35rpx;
  font-style: italic;
  text-align: left;
  margin-bottom: 10rpx;
}
.item .input_name{
  height: 90%;
  box-shadow: 1rpx 1rpx 4rpx rgba(253, 185, 44, .3);
  padding: 10rpx;
}
.input_name .input{
  height: 50rpx;
  color:black;
}
.tui-picker-detail{
  display: flex;
  justify-content: space-evenly;
}
.item .input_desc{
  height: 200rpx;
  box-shadow: 1rpx 1rpx 4rpx rgba(253, 185, 44, .3);
  padding: 10rpx;
}
.item .input-thing{
  height: 250rpx;
  box-shadow: 1rpx 1rpx 4rpx rgba(253, 185, 44, .3);
  padding: 10rpx;
}
.imgs-wrap{
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
}
.img-item{
  box-sizing: content-box;
  position: relative;
  width: 160rpx;
  height: 160rpx;
  text-align: center;
}

.img-item .img-del{
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  width: 38rpx;
  height: 38rpx;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 95% 95%;
  background-image:url('data:image/svg+xml;base64,');
}
.pic {
  float:left;
  position:relative;
  margin-right:9px;
  margin-bottom:9px;
  }

.img-item image{
  width: 100%;
  height: 100%;
}

image.sel-pic{
  margin-top: 50%;
  width: 50%;
  height: 50%;
  transform: translateY(-50%);
}
.delete-btn{
  position: absolute;
  top: 0;
  right: 0;
}
button.submit-btn{
  background-color: #FFA500;
  border: none;
  box-shadow: 4rpx 4rpx 5rpx rgba(253, 185, 44, .3);
}