  /* overflow: hidden; */
}

.mask{
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 500rpx;
  background-color: #FFA500;
}
.wave{
  position: absolute;
  top: 90%;
	width: 200rpx;
	height: 200rpx;
	/* background-color: #FFA500; */
	border-radius: 50%;
}
.wave:before,.wave:after{
  content: "";
	position: absolute;
	width: 600rpx;
	height: 600rpx;
	top: 260%;
	left: 50%;
	background-color: rgba(252, 230, 197);
	border-radius: 45%;
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 5s linear infinite;
}
.wave:after {
	border-radius: 47%;
	background-color: rgb(252, 230, 197);
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 10s linear -5s infinite;
}

@keyframes rotate {
	50% {
		transform: translate(-50%, -73%) rotate(180deg);
	} 100% {
		transform: translate(-50%, -70%) rotate(360deg);
	}
}
